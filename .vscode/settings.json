        "editor.formatOnSaveMode": "file",
    },
    // "[cmake]": {
    // 	"editor.formatOnSave": false,
    // },
    "[dockerfile]": {
        "editor.formatOnSave": false,
    },
    "cmake.configureOnOpen": true,
    "cmake.sourceDirectory": "${workspaceFolder}/${env:HOLOSCAN_PUBLIC_FOLDER}",
    // https://vector-of-bool.github.io/docs/vscode-cmake-tools/settings.html
    "cmake.buildTask": false,
    "cmake.buildDirectory": "${workspaceFolder}/${env:HOLOSCAN_PUBLIC_FOLDER}/build-${variant:buildType}-${variant:platform}",
    // "cmake.installPrefix": "${workspaceFolder}/${env:HOLOSCAN_PUBLIC_FOLDER}/install-${variant:buildType}-${variant:platform}",
    "cmake.preferredGenerators": [
        "Ninja",
        "Unix Makefiles"
    ],
    "cmake.configureArgs": [
        "--log-context",
        "-DFETCHCONTENT_QUIET=Off",
        "-DHOLOSCAN_USE_CCACHE=On",
        "-DHOLOSCAN_BUILD_LIBTORCH=1"
        // "--trace",
        // "--trace-expand",
    ],
    "C_Cpp.clang_format_fallbackStyle": "Google",
    "C_Cpp.formatting": "clangFormat",
    "C_Cpp.clang_format_sortIncludes": true,
    "C_Cpp.codeAnalysis.clangTidy.enabled": false,
    "C_Cpp.codeAnalysis.clangTidy.useBuildPath": false,
    "C/C++ Include Guard.Macro Type": "Filepath",
    "C/C++ Include Guard.Path Skip": 2,
    "C/C++ Include Guard.Path Depth": 0,
    "C/C++ Include Guard.Remove Extension": false,
    "sonarlint.pathToCompileCommands": "${command:cmake.buildDirectory}/compile_commands.json",
    // https://github.com/matepek/vscode-catch2-test-adapter/blob/master/documents/configuration/test.advancedExecutables.md
    "testMate.cpp.test.advancedExecutables": [
        {
            "name": "${filename}",
            "description": "${relDirpath}/",
            "pattern": "${command:cmake.buildDirectory}/gtests/**/*{test,Test,TEST}*",
            "cwd": "${command:cmake.buildDirectory}",
            "env": {
                "LD_LIBRARY_PATH": "${command:cmake.buildDirectory}/lib:${command:cmake.buildDirectory}/lib/gxf_extensions:${env:LD_LIBRARY_PATH}",
                "HOLOSCAN_TESTS_DATA_PATH": "/workspace/holoscan-sdk/${env:HOLOSCAN_PUBLIC_FOLDER}/tests/data",
                "HOLOSCAN_INPUT_PATH": "/workspace/holoscan-sdk/${env:HOLOSCAN_PUBLIC_FOLDER}/data",
                "HOLOSCAN_LOG_LEVEL": "DEBUG",
                "HOLOSCAN_EXECUTOR_LOG_LEVEL": "INFO",
            }
        },
        {
            "name": "${filename}",
            "description": "${relDirpath}/",
            "pattern": "${command:cmake.buildDirectory}/_deps/holoviz-build/tests/**/*{test,Test,TEST}*",
            "cwd": "${command:cmake.buildDirectory}",
            "env": {
                "LD_LIBRARY_PATH": "${command:cmake.buildDirectory}/lib:${command:cmake.buildDirectory}/lib/gxf_extensions:${env:LD_LIBRARY_PATH}",
                "HOLOSCAN_TESTS_DATA_PATH": "/workspace/holoscan-sdk/${env:HOLOSCAN_PUBLIC_FOLDER}/tests/data",
                "HOLOSCAN_INPUT_PATH": "/workspace/holoscan-sdk/${env:HOLOSCAN_PUBLIC_FOLDER}/data",
            }
        },
    ],
    "python.analysis.extraPaths": [
        // variable substitution, e.g. using ${command:cmake.buildDirectory}/${env:HOLOSCAN_PUBLIC_FOLDER} is not working here
        // Put the build folder first because most Python functionality depends on Python bindings (.so files).
        // Without it, VSCode cannot find modules such as `_core`.
        "./public/build-debug-x86_64/python/lib",
        "./build-debug-x86_64/python/lib",
        "./public/python",
        "./python",
    ],
    // TODO: Generate .pyi files and support autocomplete for C++ modules
    // "python.autoComplete.extraPaths": [],
    "python.formatting.provider": "black",
    "python.linting.flake8Enabled": false,
    "python.linting.enabled": true,
    "python.linting.mypyEnabled": true,
    "isort.importStrategy": "fromEnvironment",
    "isort.check": true,
    "cpplint.cpplintPath": "/home/holoscan-sdk/.local/bin/cpplint",
    "cmake.cmakePath": "cmake",
    // It seems that Pytest Discovery feature in VSCode needs to be improved
    // - https://github.com/microsoft/vscode-python/issues/17242
